<% include partials/header.ejs %>
    
    <section class="hero is-fullheight bg">
        <div class="hero-body">
            <div class="container">
                <div class="columns">
                    <div class="column is-half is-offset-one-quarter">
                        <div class="box">
                            <h1 class="title has-text-centered">
                                Register
                            </h1>
                            <% if(userTaken){ %>
                            <h2 class="subtitle has-text-centered" style="margin-top: 5px;">
                                Please select a new username
                            </h2>
                            <% } %>                            
                            <form action="/register" method="POST" style="padding: 10px;">
                                <div class="columns">
                                    <div class="column">
                                        <div class="field">
                                            <label for="" class="label">Username</label>
                                            <div class="control">
                                                <input type="text" class="input" name="username" placeholder="Username" required="true">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="columns">
                                    <div class="column">
                                        <div class="field">
                                            <label for="" class="label">Password</label>
                                            <div class="control">
                                                <input type="password" class="input" name="password" placeholder="Password" required="true">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="columns">
                                    <div class="column">
                                        <div class="field">
                                            <label for="" class="label">Handle</label>
                                            <div class="control">
                                                <input type="text" class="input" name="handle" placeholder="Handle" required="true">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="columns">
                                    <div class="column">
                                        <div class="field is-grouped">
                                            <div class="control">
                                                <button class="button is-primary">Register</button>
                                            </div>
                                            <div class="control">
                                                <a class="button is-primary" href="/login">Go to Login page</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </section>

<% include partials/footer.ejs %>
